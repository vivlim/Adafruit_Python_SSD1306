    "version": "0.2.0",
    "configurations": [
        {
            "name": "pygame harness",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/pygame_harness.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 3000,
            "host": "192.168.1.34",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}